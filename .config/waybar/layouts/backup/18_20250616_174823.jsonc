{
    // sourced from header module //
    "layer": "top",
    "output": [
        "*"
    ],
    "position": "top",
    "mod": "dock",
    "height": 10,
    "exclusive": true,
    "passthrough": false,
    "gtk-layer-shell": true,
    "reload_style_on_change": true,
    "include": [
        "$XDG_CONFIG_HOME/waybar/modules/*json*", 
        "$XDG_CONFIG_HOME/waybar/includes/includes.json" 
    ],
    
    "modules-left": [ "custom/app-menu", "hyprland/window", "custom/files", "custom/browser", "custom/chats", "custom/terminal", "custom/clipboard", "custom/configuration" ],
    "modules-center": [],
    "modules-right": [ "custom/media", "battery", "custom/recording", "tray", "custom/chatgpt", "custom/all-apps", "custom/do-not-disturb", "clock" ],
    
    "custom/app-menu": {
      "format": " ",
      "on-click": "~/.config/rofi/rofi-app-menu/app-menu",
      "tooltip": false
    },

    "hyprland/window": {
      "format": "{initialTitle}",
      "rewrite": {
        "": " Home  ",
        "kitty": "Terminal",
      },
      "tooltip": false
    },

    "custom/files": {
      "format": "Files",
      "on-click": "dolphin",
      "tooltip": false
    },
    
    "custom/browser": {
      "format": "Browser",
      "on-click": "zen-browser",
      "tooltip": false
    },

    "custom/chats": {
      "format": "Chats",
      "on-click": "beeper --disable-gpu",
      "tooltip": false
    },

    "custom/terminal": {
      "format": "Terminal",
      "on-click": "kitty",
      "tooltip": false
    },

    "custom/clipboard": {
      "format": "Clipboard",
      "on-click": "cliphist list | rofi -dmenu | cliphist decode | wl-copy",
      "tooltip": false
    },

    "custom/configuration": {
      "format": "Configuration",
      "on-click": "kitty bash -i -c 'lf ~/.config'",
      "tooltip": false
    },

    "custom/media": {
      "format": "{}",
      "escape": true,
      "return-type": "json",
      "max-length": 40,
      "exec": "$HOME/.config/Scripts/mediaplayer.py 2> /dev/null",
      "tooltip": false
    },


    "tray": {
      "icon-size": 13,
      "spacing": 9,
      "tooltip": false
    },
    
    "custom/chatgpt": {
      "format": " ",
      "on-click": "cmatrix",
      "tooltip": false
    },


    "clock": {
      "interval": 60,
      "format": "{:%a %b %d %I:%M %p}",
      "tooltip": false
    }
}